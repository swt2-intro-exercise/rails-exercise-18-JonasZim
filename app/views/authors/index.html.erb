<h1>Listing authors</h1>

<table>
    <tr>
        <th>Name</th>
        <th>Homepage</th>
        <th>Details</th>
        <th></th>
    </tr>

    <% @authors.each do |author| %>
        <tr>
            <td><%= author.name %></td>
            <td><%= author.homepage %></td>
            <td><%= link_to "Link", "#{author.id}" %></td>
        </tr>
    <% end %>

</table>

<%= link_to 'New', new_author_path %>